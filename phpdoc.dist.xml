<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>LaMarche</title>
    <parser>
        <target>build/api</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>build/api</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/build/api/log/{DATE}.log</default>
            <errors>{APP_ROOT}/build/api/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="responsive" />
    </transformations>
    <files>
        <directory>src/module</directory>
        <ignore>*test*</ignore>
        <ignore>*config*</ignore>
        <ignore>*views*</ignore>
        <ignore>Module.php</ignore>
    </files>
</phpdoc>
